{
    "general": {
        "case_name": "shear_flow",
        "end_time": 0.3,
        "save_path": "./results",
        "save_dt": 0.1
    },
    "domain": {
        "x": {
            "cells": 4,
            "range": [0.0, 1.0]
        },
        "y": {
            "cells": 32,
            "range": [0.0, 1.0]   
        },
        "z": {
            "cells": 1,
            "range": [0.0, 1.0]
        },
        "decomposition": {
            "split_x": 1,
            "split_y": 1,
            "split_z": 1
        }
    },
    "boundary_conditions": {
        "east": {"type": "PERIODIC"},
        "west": {"type": "PERIODIC"},
        "north": {"type": "PERIODIC"},
        "south": {"type": "PERIODIC"},
        "top": {"type": "INACTIVE"},
        "bottom": {"type": "INACTIVE"}
    },
    "initial_condition": {
        "rho": 1.0,
        "u": 0.0,
        "v": 0.0,
        "w": 0.0,
        "p": 1.0
    },
    "material_properties": {
        "equation_of_state": {
            "model": "IdealGas",
            "specific_heat_ratio": 1.4,
            "specific_gas_constant": 1.0
        },
        "transport": {
            "dynamic_viscosity": {
                "model": "CUSTOM",
                "value": 1e-1
            },
            "bulk_viscosity": 0.0,
            "thermal_conductivity": {
                "model": "CUSTOM",
                "value": 0.0
            }
        }
    },
    "forcings": {
        "custom_forcing": {
            "rho": 0.0,
            "u": "lambda x,y,t: jnp.sin(2 * jnp.pi * y)",
            "v": 0.0,
            "w": 0.0,
            "p": 0.0
        },
        "temperature": {
            "target_value": 1.0
        }
    },
    "output": {
        "primitives": ["density", "velocity", "pressure"]
    }
}
